\end_layout

\begin_layout Itemize
Unconscious 
\end_layout

\begin_layout Itemize
Turned to stone 
\end_layout

\begin_layout Itemize
Fast asleep 
\end_layout

\begin_layout Itemize
Lost in the maze of your own mind 
\end_layout

\begin_layout Itemize
Struggling in a web 
\end_layout

\begin_layout Itemize
Battling phantoms 
\end_layout

\begin_layout Itemize
Writhing in agony
\end_layout

\begin_layout Itemize
Bleeding heavily
\end_layout

